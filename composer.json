{
    "name": "julienlinard/php-api",
    "description": "API REST automatique inspir√©e d'API Platform pour PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Linard",
            "email": "julien.linard@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "julienlinard/core-php": "*",
        "julienlinard/doctrine-php": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "JulienLinard\\Api\\": "src/Api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JulienLinard\\Api\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
